# Memail Production Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
DATABASE_NAME=memail
DATABASE_USERNAME=memail
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DATABASE_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DATABASE=0

# JWT Configuration (CRITICAL - MUST CHANGE IN PRODUCTION)
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_KEY_WITH_OPENSSL
JWT_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=2592000000

# SMTP Configuration
SMTP_HOST=james
SMTP_PORT=587
SMTP_USERNAME=admin@ashulabs.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD

# Frontend URL
FRONTEND_URL=https://your-domain.com

# Application Ports
BACKEND_PORT=8585
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Monitoring (Optional - for Prometheus/Grafana)
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
SPRING_PROFILES_ACTIVE=prod
